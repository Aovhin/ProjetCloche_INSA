        });
        var btn = document.getElementById("video_presentation");
        var btn_nxt = document.getElementById("button_next");

        document.addEventListener("keyup", event => {
            if (event.isComposing || event.keyCode === 229) {
                return;
            }
            if (event.keyCode === 103 || event.keyCode === 55 || event.keyCode === 36) { //premier bouton
                if (btn.disabled === true) {
                    return;
                } else {
                    $('#video_presentation').trigger('click');
                    btn.disabled = true; // disable button
                    player2.requestFullscreen();
                    player2.currentTime(0);
                    window.setTimeout(function() {
                        btn.disabled = false; // enable button
                    }, 2000 /* 2 sec */ );
                }
            } //note Do ... fumier... révolution... 
            //reste à faire : 
            //cancel full screen et stop video quand c'est fini
            // Nouveau texte 
            if (event.keyCode === 101 || event.keyCode === 53 || event.keyCode === 12) { //seconde bouton
                if (btn_nxt.disabled === true) {
                    return;
                } else {
                    $('#button_next').trigger('click');
                    btn_nxt.disabled = true; // disable button

                    window.setTimeout(function() {
                        btn_nxt.disabled = false; // enable button
                    }, 1000 /* 1 sec */ );
                }
            }
            //do something
        });

